        code: "PROTO-2024-001",
        province_code: "DKI",
        created_at: new Date().toISOString(),
        status: "terpakai",
      };

      // Initialize the form
      document.addEventListener("DOMContentLoaded", function () {
        loadProtocolData();
        loadProvinces();
        loadHealthcareWorkers();
        setupFormHandlers();
      });

      function loadProtocolData() {
        // Display protocol information in summary card
        document.getElementById("protocolCode").textContent =
          mockProtocol.code || "-";
        document.getElementById("protocolProvince").textContent =
          mockProtocol.province_code || "-";

        const createdDate = new Date(mockProtocol.created_at);
        document.getElementById("protocolDate").textContent =
          createdDate.toLocaleDateString("id-ID", {
            year: "numeric",
            month: "long",
            day: "numeric",
          });
        document.getElementById("protocolTime").textContent =
          createdDate.toLocaleTimeString("id-ID", {
            hour: "2-digit",
            minute: "2-digit",
            second: "2-digit",
          });

        // Display status badge
        const statusContainer = document.getElementById("protocolStatus");
        const statusClass =
          "status-badge " + (mockProtocol.status || "belum-dipakai");
        const statusText =
          {
            "belum-dipakai": "Created",
            terpakai: "Used",
            delivered: "Delivered",
          }[mockProtocol.status] || "Unknown";

        statusContainer.innerHTML = `
                <div class="${statusClass}">
                    <span class="status-dot"></span>
                    ${statusText}
                </div>
            `;
      }

