      <form class="form-card" id="patientForm">
        <div class="form-card-title">
          <span class="form-card-icon">üë©‚Äç‚öïÔ∏è</span>
          <h2>Data Pasien OBGYN</h2>
        </div>

        <div class="form-grid">
          <!-- Nama Lengkap Pasien -->
          <div class="form-group">
            <label class="form-label">Nama Lengkap Pasien</label>
