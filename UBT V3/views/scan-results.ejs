        </div>

        <!-- Action Buttons -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <span>üíæ</span> Simpan Data
          </button>
          <button type="reset" class="btn btn-secondary">
            <span>üîÑ</span> Bersihkan
          </button>
        </div>
      </form>
    </div>

