        printWindow.document.open();
        printWindow.document.write(content);
        printWindow.document.close();
      }

      // Track current partner ID for Export All feature
      let currentPartnerId = null;

      // Export all patients for current partner as CSV
      function exportAllPatientsCSV() {
        if (!currentPartnerId) {
          showToast('No partner selected', 'error');
          return;
        }
        fetch(`/api/partner/${currentPartnerId}/patients`)
          .then(r => r.json())
          .then(patients => {
            if (!patients || patients.length === 0) {
              showToast('No patients found to export', 'warning');
              return;
            }
            const rows = [
              ['Code','Patient Name','Healthcare Facility','Occupation','Marital Status','GPA','Address','Phone','Age','Provider','Status','Created At','Notes']
            ];
            patients.forEach(p => {
              rows.push([
                p.code || '',
                p.patient_name || '',
                p.healthcare_facility || '',
                p.occupation || '',
                p.marital_status || '',
                p.gpa || '',
                p.address || '',
                p.phone || '',
                p.age || '',
                p.provider || '',
                p.status || '',
                p.created_at || '',
                p.notes || ''
              ]);
            });
            const csv = rows.map(r => r.map(c => '"' + String(c).replace(/"/g, '""') + '"').join(',')).join('\n');
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `patients-${currentPartnerId}-${new Date().getTime()}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            showToast(`Exported ${patients.length} patient record(s)`, 'success');
          })
          .catch(err => {
            console.error('Error exporting all patients:', err);
            showToast('Error exporting patients', 'error');
          });
      }

      // Attach click handlers for the detail buttons (delegation)
      document.addEventListener('click', function(e) {
        const btn = e.target.closest('.btn-detail');
        if (btn) {
          const partnerId = btn.dataset.partnerId;
          if (partnerId) openPatientModal(partnerId);
        }
      });

      // Wire modal export/print buttons
      document.getElementById('modalExportBtn').addEventListener('click', exportPatientCSV);
      document.getElementById('modalExportAllBtn').addEventListener('click', exportAllPatientsCSV);
      document.getElementById('modalPrintBtn').addEventListener('click', printPatientReport);
    </script>
  </body>
