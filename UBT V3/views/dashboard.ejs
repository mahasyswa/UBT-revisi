    <!-- Patient Detail Modal -->
    <div class="modal-backdrop" id="patientModalBackdrop">
      <div class="patient-modal" role="dialog" aria-modal="true" aria-labelledby="patientModalTitle">
        <div class="modal-header">
          <div>
            <div class="title">OBGYN Patient Data</div>
            <div id="patientModalName" class="patient-name">&nbsp;</div>
            <div id="patientModalCode" style="font-size:12px; opacity:0.9; margin-top:4px;">&nbsp;</div>
          </div>
          <div>
            <button class="modal-close" id="closePatientModal" aria-label="Close">‚úï</button>
          </div>
        </div>
        <div class="modal-body">
          <div class="patient-list" id="patientList">
            <!-- list rendered here -->
            <div style="padding:8px;color:#6c757d;font-size:13px;">Loading...</div>
          </div>
          <div class="patient-detail" id="patientDetail">
            <div style="color:#666;padding:8px;font-size:13px;">Select a patient to see details</div>
          </div>
