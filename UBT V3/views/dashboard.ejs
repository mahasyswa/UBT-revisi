            html.push(`<div class="info-box" style="grid-column:1 / -1"><div class="label">üè† Full Address</div><div class="value">${d.address || '-'}</div></div>`);
            html.push(`<div class="info-box"><div class="label">‚òéÔ∏è Phone</div><div class="value">${d.phone || '-'}</div></div>`);
            html.push('</div>');

            // GPA section
            const gpa = (d.gpa || '').split(/[,/\s]+/).slice(0,3);
            const G = gpa[0] || '-';
            const P = gpa[1] || '-';
            const A = gpa[2] || '-';

            html.push(`<div class="gpa-box"><div class="gpa-item"><div class="num">${G}</div><div class="label">G (Gravida)</div></div><div class="gpa-item"><div class="num">${P}</div><div class="label">P (Para)</div></div><div class="gpa-item"><div class="num">${A}</div><div class="label">A (Abortus)</div></div></div>`);

            html.push(`<div style="margin-top:8px;color:#999;font-size:12px">üìÖ ${new Date(d.created_at).toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' })}</div>`);

            html.push(`<div style="margin-top:12px;color:#444"><strong>üìù Notes</strong><div style="margin-top:6px;color:#666;font-size:13px">${d.notes || '-'}</div></div>`);

            patientDetailEl.innerHTML = html.join('');
          })
          .catch(err => {
            console.error('Error fetching patient data:', err);
            patientDetailEl.innerHTML = '<div style="padding:8px;color:#c53030;">Error loading patient details</div>';
          });
      }

      // Export selected patient data as CSV
      function exportPatientCSV() {
        const d = lastSelectedPatient;
        if (!d) {
          showToast('No patient selected to export', 'error');
          return;
        }

        const rows = [
          ['Field','Value'],
          ['Code', d.code || ''],
          ['Name', d.patient_name || ''],
          ['Healthcare Facility', d.healthcare_facility || ''],
          ['Employment Status', d.employment_status || ''],
          ['Marital Status', d.marital_status || ''],
          ['Province', d.province_code || ''],
          ['District / City', d.district || ''],
          ['Age', d.age || ''],
          ['Address', d.address || ''],
          ['Phone', d.phone || ''],
          ['GPA', d.gpa || ''],
          ['Created At', d.created_at || ''],
          ['Notes', d.notes || '']
        ];

        const csv = rows.map(r => r.map(c => '"' + String(c).replace(/"/g,'""') + '"').join(',')).join('\n');
        const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `patient-${d.code || 'report'}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      // Print selected patient detail
      function printPatientReport() {
        const d = lastSelectedPatient;
        if (!d) {
          showToast('No patient selected to print', 'error');
          return;
        }

        const printWindow = window.open('', '_blank', 'noopener');
        if (!printWindow) {
          showToast('Popup blocked. Allow popups to enable printing.', 'error');
          return;
        }

        const content = `
          <html>
            <head>
              <title>Patient Report - ${d.code || ''}</title>
              <style>
                body { font-family: Arial, Helvetica, sans-serif; padding:20px; color:#222 }
                .header { background: linear-gradient(90deg,#ff6fa3,#7b1fa2); padding:18px; color:#fff; border-radius:6px }
                .header h1 { margin:0; font-size:20px }
                .header p { margin:4px 0 0; font-size:13px; opacity:0.95 }
                .info { margin-top:14px; display:grid; grid-template-columns:1fr 1fr; gap:12px }
                .info .box { padding:10px; border-radius:6px; background:#f8f8f8 }
                .gpa { margin-top:12px; padding:12px; border-radius:8px; color:#fff; background: linear-gradient(90deg,#ff6fa3,#7b1fa2); display:flex; gap:10px; }
              </style>
            </head>
            <body>
              <div class="header"><h1>OBGYN Patient Data</h1><p>${d.patient_name || ''} ‚Äî ${d.code || ''}</p></div>
              <div class="info">
